<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qindor.hsmobileservice">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.LoginActivity"
            android:alwaysRetainTaskState="true">
        </activity>
        <activity android:name=".Activity.SetActivity"
            android:alwaysRetainTaskState="true">
        </activity>
        <activity android:name=".Activity.RoomActivity"
            android:alwaysRetainTaskState="true">

          </activity>
        <activity android:name=".Activity.InformationActivity"
            android:alwaysRetainTaskState="true">
            <intent-filter>
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>
            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_filter" />
            <intent-filter>
                <action android:name="android.nfc.action.TAG_DISCOVERED" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.WristbandActivity"
            android:alwaysRetainTaskState="true">
        </activity>
        <activity android:name=".Utils.zxing.activity.CaptureActivity"
            android:alwaysRetainTaskState="true">
        </activity>
        <activity android:name=".Activity.SellServiceActivity"
            android:alwaysRetainTaskState="true">
        </activity>
        <activity android:name=".Activity.ServiceTypeActivity"
            android:alwaysRetainTaskState="true">
        </activity>
        <activity android:name=".Activity.ServiceProjectActivity"
            android:alwaysRetainTaskState="true">
        </activity>
        <activity android:name=".Activity.ServiceTechnicianActivity"
            android:alwaysRetainTaskState="true">
        </activity>
    </application>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.CAMERA"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>