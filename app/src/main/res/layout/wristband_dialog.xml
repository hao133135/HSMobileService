<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/wristband_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="服             务"
            android:gravity="center"
            android:background="@color/ac_login_edt_back_r"
            android:textColor="@color/white"
            android:textSize="18dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <ListView
                android:id="@+id/wristband_dialog_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"></ListView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center">
            <Button
                android:id="@+id/wristband_dialog_out_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/shape_ac_login_btn_back_fill"
                android:text="退出" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>